@page "/listadopersonas"
@rendermode InteractiveServer
@inject IJSRuntime JSRuntime
@inject NavigationManager Navegador
@inject PersonaListarUseCase personaListarUseCase
@inject PersonaBajaUseCase personaBajaUseCase

<h2>Listado de Personas</h2>
<DialogoConfirmacion @ref="dialogo" OnConfirmado="Eliminar"/>
<div class="table-responsive-lg">
  <table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>DNI</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Email</th>
            <th>Telefono</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var persona in _listaper ?? new List<Persona>())
        {
            <tr>
                <td> @persona.Id </td>
                <td>@persona.Dni</td>
                <td>@persona.Nombre</td>
                <td>@persona.Apellido</td>
                <td>@persona.Email</td>
                <td>@persona.Telefono</td>
                <td>    
                    <button class="btn btn-primary" @onclick="()=>ModificarPersona(persona)">Editar</button>
                    <button class="btn btn-danger" @onclick="()=>ConfirmarEliminacion(persona)">Eliminar</button>          
                </td>
            </tr>
        }
    </tbody>
  </table>
</div>
@code{
    public List<Persona> _listaper = new List<Persona>();
    protected override void OnInitialized(){
        _listaper = personaListarUseCase.Ejecutar() ?? new List<Persona>();
    }
    DialogoConfirmacion dialogo = null!;
    Persona? personaElim = null;
    
    private void ConfirmarEliminacion(Persona persona){

       if (dialogo == null)
        {
            Console.WriteLine("DialogoConfirmacion no está inicializado todavía.");
            return;
        }
        personaElim = persona;
        dialogo.Mensaje = $"¿Seguro que desea eliminar a {persona.Nombre} {persona.Apellido}?";
        dialogo.Mostrar();
    }
    private void Eliminar(){
        
        if(personaElim != null){
            personaBajaUseCase.Ejecutar(personaElim.Id, 1);
            _listaper = personaListarUseCase.Ejecutar();
        }
        
        
    }
    void ModificarPersona(Persona persona){
        Navegador.NavigateTo($"persona/{persona.Id}");
    }
}